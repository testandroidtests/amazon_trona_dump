<policy>
    <entry>
        <user type="child" />
        <event type="onUserSwitch"/>
        <action type="disable"/>
        <component name="com.amazon.paladin/.app.MMLauncherActivity"/>
    </entry>
    <entry>
        <user type="child" />
        <event type="onUserSwitch"/>
        <action type="disable"/>
        <component name="com.amazon.paladin"/>
    </entry>
    <entry>
        <user type="adult" />
        <event type="onUserSwitch"/>
        <action type="disable"/>
        <component name="com.amazon.paladin/.app.MMLauncherActivity"/>
    </entry>
    <entry>
        <user type="adult" />
        <event type="onUserSwitch"/>
        <action type="disable"/>
        <component name="com.amazon.paladin"/>
    </entry>
    <!-- Disabling ecs in secondary and child profile.-->
    <entry>
        <user type="child" />
        <event type="onUserSwitch"/>
        <action type="disable"/>
        <component name="com.amazon.knight.ecs"/>
    </entry>
    <entry>
        <user type="adult" />
        <event type="onUserSwitch"/>
        <action type="disable"/>
        <component name="com.amazon.knight.ecs"/>
    </entry>
</policy>
